	@echo "       L  |  J   L -'     .'         /  |    /\\"
	@echo "       |  J.  L  J     .-;.-/       |    \\ .' /"
	@echo "       J   L\`-J   L____,.-'\`        |  _.-'   |"
	@echo "        L  J   L  J                  \`\`  J    |"
	@echo "        J   L  |   L                     J    |"
	@echo "         L  J  L    \\                    L    \\"
	@echo "         |   L  ) _.'\                    ) _.'\\"
	@echo "         L    \\('\`    \                  ('\`    \\"
	@echo "          ) _.'\\\`-....'                   \`-....'"
