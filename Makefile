	@echo "EVERYTHING DONE✌️   "⠀⠀⠀⠀⠀⠀⠀


clean:
	@$(RM) $(OBJ) $(DEP) --no-print-directory
	@$(RM) -r $(OBJ_DIR) --no-print-directory
	@echo "OBJECTS REMOVED😭   "

